################################################################################
ARCH   = $(shell uname -m)
OS     = $(shell uname -s | tr '[A-Z]' '[a-z]')
TARGET = $(HOME)/.xmonad/xmonad-$(ARCH)-$(OS)
SRC    = $(shell find . -type f -name '*.hs')
BIN    = cabal-dev/bin/pjones-xmonad
XMONAD = cabal-dev/bin/xmonad

################################################################################
.PHONEY: install restart

################################################################################
all: $(BIN)

################################################################################
install: $(TARGET)

################################################################################
restart: install
	$(XMONAD) --restart

################################################################################
$(BIN): $(SRC)
	cabal-dev install

################################################################################
$(TARGET): $(BIN)
	mv $@ $@.prev
	cp -p $< $@
	cd $(dir $@) && ln -nfs $(notdir $@) xmonad
